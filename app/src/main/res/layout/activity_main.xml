<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:layout_width="72dp"
            android:layout_height="32dp" android:layout_alignParentStart="true"
            android:layout_marginStart="22dp" android:layout_alignParentTop="true" android:id="@+id/NameID"
            android:layout_marginTop="47dp" android:text="Username"
            android:layout_centerHorizontal="true"
    />
    <Button
            android:text="SEND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/S_btn" android:layout_marginBottom="147dp"
            android:layout_alignStart="@+id/GenderID"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_marginEnd="41dp"
            android:id="@+id/editName" android:layout_marginTop="31dp"/>
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:id="@+id/PassID"
            android:layout_marginTop="99dp" android:layout_alignStart="@+id/NameID"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|textPassword"
            android:ems="10"
            android:layout_alignParentTop="true" android:id="@+id/editPass" android:layout_marginTop="86dp"
            android:layout_alignStart="@+id/editName"/>
    <TextView
            android:text="BirthDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/PassID" android:id="@+id/BirthID" android:layout_marginTop="147dp"
            android:layout_marginEnd="5dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|date"
            android:ems="10"
            android:layout_below="@+id/editPass" android:layout_alignEnd="@+id/editName" android:id="@+id/editBirth"/>
    <TextView
            android:text="Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:id="@+id/GenID"
            android:layout_marginTop="191dp" android:layout_alignStart="@+id/NameID" android:layout_marginStart="9dp"/>
    <RadioGroup
            android:layout_width="217dp"
            android:layout_height="36dp" android:layout_alignTop="@+id/GenID"
            android:layout_alignStart="@+id/editName" android:layout_marginTop="-1dp" android:layout_marginStart="3dp"
            android:orientation="horizontal"
            android:id="@+id/GenderID">
        <RadioButton
                android:text="male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/maleID" android:layout_weight="1"/>
        <RadioButton
                android:text="female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/femaleID" android:layout_weight="1"/>
    </RadioGroup>
    <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/GenderID"
            android:layout_alignEnd="@+id/PassID" android:id="@+id/EmailID" android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/GenID" android:id="@+id/editEmail" android:layout_alignStart="@+id/GenderID"/>
    <TextView
            android:text="Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:id="@+id/PhoneID"
            android:layout_alignStart="@+id/NameID" android:layout_marginBottom="219dp"
            android:layout_marginStart="14dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/editEmail" android:layout_alignEnd="@+id/GenderID" android:id="@+id/editPhone"
            android:layout_marginTop="0dp" android:layout_marginEnd="2dp"/>
</RelativeLayout>